<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_gravity="top"
    >

    <GridLayout
        android:id="@+id/cats"
        android:layout_width="match_parent"
        android:layout_height="813dp"
        android:layout_marginTop="10dp"
        android:columnCount="2"
        android:rowCount="10">

        <androidx.cardview.widget.CardView
            android:id="@+id/cat1"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:clickable="true"
            app:cardBackgroundColor="@color/blueI"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sexuality"
                android:textSize="20dp"
                android:fontFamily="@font/kaushan_script"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cat2"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/pinkI"
            app:cardCornerRadius="20dp">

            <TextView
                android:fontFamily="@font/kaushan_script"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Contraceptives"
                android:textSize="20dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cat3"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/pinkI"
            app:cardCornerRadius="20dp">

            <TextView
                android:fontFamily="@font/kaushan_script"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Gender Identity"
                android:textSize="20dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cat4"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:clickable="true"
            app:cardBackgroundColor="@color/blueI"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Male"
                android:textSize="20dp"
                android:fontFamily="@font/kaushan_script"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cat5"
            android:layout_width="160dp"

            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/blueI"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Female"
                android:textSize="20dp"
                android:fontFamily="@font/kaushan_script"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cat6"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:clickable="true"
            app:cardBackgroundColor="@color/pinkI"
            app:cardCornerRadius="20dp"
            >

            <TextView
                android:fontFamily="@font/kaushan_script"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="STDs and STIs"
                android:textSize="20dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cat7"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center"
            android:clickable="true"
            app:cardBackgroundColor="@color/pinkI"
            app:cardCornerRadius="20dp">

            <TextView
                android:fontFamily="@font/kaushan_script"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Puberty"
                android:textSize="20dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cat8"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center"
            android:clickable="true"
            app:cardBackgroundColor="@color/blueI"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sex"
                android:textSize="20dp"
                android:fontFamily="@font/kaushan_script"/>

        </androidx.cardview.widget.CardView>

    </GridLayout>

    <ListView
        android:id="@+id/search_articles"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
</LinearLayout>


